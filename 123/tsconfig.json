{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitAny": false,
    "strictFunctionTypes": false,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "isolatedModules": true,
    "lib": ["dom", "es5", "es2015.promise"],
    "sourceMap": true,
    "pretty": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["*", "src/*"]
    },
    "typeRoots": ["./src/types"]
  }
}
